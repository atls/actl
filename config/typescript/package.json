{
  "name": "@atls/config-typescript",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:json && yarn library build",
    "build:json": "ts-node -e 'const fs = require(\"fs\"); const config = require(\"./src/config.ts\"); fs.writeFileSync(\"./src/tsconfig.json\", JSON.stringify(config.tsConfig, null, 2))'",
    "prepack": "yarn run build",
    "postpack": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "20.11.20",
    "ts-node": "10.9.2",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "exports": {
      "./package.json": "./package.json",
      "./tsconfig.json": "./dist/tsconfig.json",
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "typings": "dist/index.d.ts"
  }
}
