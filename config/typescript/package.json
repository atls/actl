{
  "name": "@atls/config-typescript",
  "version": "0.0.4",
  "license": "BSD-3-Clause",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn library build",
    "build:json": "ts-node -e 'const fs = require(\"fs\"); const config = require(\"./src/tsconfig.ts\"); fs.writeFileSync(\"./src/tsconfig.json\", JSON.stringify(config.tsConfig, null, 2))'",
    "prepack": "yarn run build",
    "postpack": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "18.19.3",
    "ts-node": "10.9.2",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "typings": "dist/index.d.ts"
  }
}
