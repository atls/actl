{
  "name": "tools",
  "private": true,
  "workspaces": [
    "schematics/**/*",
    "prettier/**/*",
    "code/**/*",
    "webpack/*",
    "config/*",
    "yarn/*",
    "jest/*",
    "cli/*"
  ],
  "scripts": {
    "cli:build": "yarn worker:format:build && yarn worker:lint:build && yarn worker:service:build && yarn worker:test:build && yarn worker:typescript:build && yarn yarn:cli:build && yarn yarn:cli:fix",
    "worker:build": "yarn worker:format:build && yarn worker:lint:build && yarn worker:service:build && yarn worker:test:build && yarn worker:typescript:build",
    "worker:format:build": "yarn workspace @atls/code-format-worker build:worker",
    "worker:lint:build": "yarn workspace @atls/code-lint-worker build:worker",
    "worker:schematics:build": "yarn workspace @atls/code-schematics-worker build:worker",
    "worker:service:build": "yarn workspace @atls/code-service-worker build:worker",
    "worker:test:build": "yarn workspace @atls/code-test-worker build:worker",
    "worker:typescript:build": "yarn workspace @atls/code-typescript-worker build:worker",
    "yarn:cli:build": "yarn workspace @atls/yarn-cli build",
    "yarn:cli:fix": "yarn workspace @atls/yarn-cli fix"
  },
  "resolutions": {
    "@types/estree": "1.0.0",
    "clipanion": "3.2.0-rc.6",
    "lint-staged": "^11.2.6",
    "pkg-tests-fixtures": "file:yarn/test-utils/cache/pkg-tests-fixtures.tgz"
  },
  "devDependencies": {
    "@atls/code-runtime": "workspace:*",
    "@atls/code-service": "workspace:*",
    "@atls/config-eslint": "workspace:*",
    "@atls/config-jest": "workspace:*",
    "@atls/schematics": "workspace:*",
    "@jest/core": "^29.5.0",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@yarnpkg/builder": "^3.2.7",
    "esbuild": "npm:esbuild-wasm@^0.17.14",
    "eslint": "^8.37.0",
    "eslint-import-resolver-node": "^0.3.7",
    "espree": "^9.5.1",
    "husky": "8.0.3",
    "readable-stream": "^4.3.0",
    "typescript": "^5.0.3",
    "webpack": "^5.78.0"
  },
  "packageManager": "yarn@3.1.1",
  "formatterIgnorePatterns": [
    "*.js"
  ],
  "tools": {
    "schematic": {
      "collection": "@atls/schematics",
      "schematic": "project",
      "type": "libraries",
      "migration": "1645001973970"
    }
  }
}
