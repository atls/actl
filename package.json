{
  "name": "tools",
  "private": true,
  "workspaces": [
    "schematics/**/*",
    "prettier/**/*",
    "code/**/*",
    "webpack/*",
    "config/*",
    "yarn/*",
    "jest/*",
    "cli/*"
  ],
  "scripts": {
    "cli:build": "yarn worker:format:build && yarn worker:lint:build && yarn worker:schematics:build && yarn worker:service:build && yarn worker:test:build && yarn worker:typescript:build && yarn yarn:cli:build",
    "worker:build": "yarn worker:format:build && yarn worker:lint:build && yarn worker:schematics:build && yarn worker:service:build && yarn worker:test:build && yarn worker:typescript:build",
    "worker:format:build": "yarn workspace @atls/code-format-worker build:worker",
    "worker:lint:build": "yarn workspace @atls/code-lint-worker build:worker",
    "worker:schematics:build": "yarn workspace @atls/code-schematics-worker build:worker",
    "worker:service:build": "yarn workspace @atls/code-service-worker build:worker",
    "worker:test:build": "yarn workspace @atls/code-test-worker build:worker",
    "worker:typescript:build": "yarn workspace @atls/code-typescript-worker build:worker",
    "yarn:download": "node -r .pnp.cjs --loader .pnp.loader.mjs --experimental-vm-modules  $(yarn workspace @atls/yarn-plugin-pnp-patch yarn:download && yarn workspace @atls/yarn-test-utils yarn:download)"
  },
