{
  "name": "@atls/schematics",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "files": [
    "collection.json",
    "dist"
  ],
  "scripts": {
    "build": "yarn library build",
    "prepack": "yarn run build && yarn node ./scripts/prepack.mjs",
    "postpack": "rm -rf dist && yarn node ./scripts/postpack.mjs"
  },
  "dependencies": {
    "@angular-devkit/core": "18.0.6",
    "@angular-devkit/schematics": "18.0.6",
    "@atls/config-typescript": "workspace:*",
    "@atls/schematics-utils": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.12",
    "@types/node": "22.5.1",
    "copy-dir": "1.3.0",
    "globby": "13.2.2"
  },
  "publishConfig": {
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "typings": "dist/index.d.ts"
  },
  "schematics": "./src/collection.json"
}
